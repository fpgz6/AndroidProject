<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="dva.com.learning.MeActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView_me"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/me"
            android:padding="@dimen/normal_space"
            android:textSize="@dimen/title_text_size"
            android:background="@color/white"
            android:gravity="center_horizontal"/>

        <RelativeLayout
            android:id="@+id/login_relativelayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:padding="@dimen/normal_space"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="1dp">

            <ImageView
                android:id="@+id/imageView_me"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@mipmap/ic_launcher_round"
                android:paddingLeft="@dimen/little_space"
                android:scaleType="centerInside"
                android:contentDescription="@null"/>

            <TextView
                android:id="@+id/textView_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/imageView_me"
                android:text="@string/login"
                android:textSize="@dimen/text_size_default"
                android:paddingLeft="@dimen/big_space"
                android:layout_centerVertical="true" />

            <TextView
                android:id="@+id/textView_nothing"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/textView_login"
                android:text="@string/nothing"
                android:layout_alignParentRight="true"
                android:drawableRight="@drawable/arrow"/>

        </RelativeLayout>

        <TextView
            android:id="@+id/textView_order"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/normal_space"
            android:text="@string/order"
            android:textSize="@dimen/text_size_default"
            android:gravity="center_vertical"
            android:padding="@dimen/normal_space"
            android:drawableLeft="@drawable/order"
            android:drawableRight="@drawable/arrow"
            android:background="@color/white"
            android:drawablePadding="@dimen/normal_space"/>

        <!--<TextView
            android:id="@+id/textView_order2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/normal_space"
            android:text="@string/order"
            android:textSize="@dimen/text_size_default"
            android:gravity="center_vertical"
            android:padding="@dimen/normal_space"
            android:drawableLeft="@drawable/order"
            android:drawableRight="@drawable/arrow"
            android:background="@color/white"
            android:drawablePadding="@dimen/normal_space"/>-->

        <TextView
            android:id="@+id/textView_logout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/normal_space"
            android:text="@string/signout"
            android:textSize="@dimen/text_size_default"
            android:gravity="center_vertical"
            android:padding="@dimen/normal_space"
            android:drawableLeft="@drawable/order"
            android:drawableRight="@drawable/arrow"
            android:background="@color/white"
            android:drawablePadding="@dimen/normal_space"/>

    </LinearLayout>

</ScrollView>
